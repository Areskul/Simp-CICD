{
  "name": "simpcicd",
  "version": "0.4.6",
  "author": "Areskul <areskul@areskul.com>",
  "scripts": {
    "test:cli": "ts-node -r tsconfig-paths/register test/cli.ts",
    "test:caller": "ts-node -r tsconfig-paths/register test/caller.ts",
    "test:forker": "ts-node -r tsconfig-paths/register test/forker.ts",
    "test:hooks": "ts-node -r tsconfig-paths/register test/hooks.ts",
    "test:utils": "ts-node -r tsconfig-paths/register test/utils.ts",
    "build": "tsc -p tsconfig.types.json && rollup -c",
    "build:doc": "npx typedoc --plugin typedoc-plugin-markdown --out docs src/index.ts src/types/index.ts",
    "lint": "tsc --noEmit"
  },
  "engines": {
    "node": ">=12"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/types/index.d.ts",
  "bin": {
    "simp": "./dist/bin/cli.js"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@sliphua/lilconfig-ts-loader": "^3.2.2",
    "@supercharge/fs": "^3.4.0",
    "cac": "^6.7.12",
    "lilconfig": "^2.0.4",
    "lodash": "^4.17.21",
    "picocolors": "^1.0.0",
    "simple-git": "^3.1.1",
    "tslog": "^3.3.1",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/lodash": "^4.14.178",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.12",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.2.0",
    "prettier": "^2.5.1",
    "rollup": "^2.67.0",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-dts": "^4.1.0",
    "rollup-plugin-typescript-paths": "^1.3.0",
    "simpcicd": "^0.4.1",
    "ts-mocha": "^9.0.2",
    "tsconfig-paths": "^3.12.0",
    "tslib": "^2.3.1",
    "typedoc": "^0.22.11",
    "typedoc-plugin-markdown": "^3.11.13"
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/Areskul/Simp-CICD"
  },
  "homepage": "https://simp.areskul.com",
  "keywords": [
    "cicd",
    "bash",
    "bash wrapper",
    "git hooks",
    "simp",
    "simpcicd",
    "simple",
    "easy",
    "deployment",
    "typescript"
  ],
  "license": "MIT"
}
