{
  "extends": "./tsconfig",
  "compilerOptions": {
    "rootDir": "src",
    "module": "esnext",
    "declarationDir":"dist/dts",
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts"
  ],
  "exclude":[
    "test",
    "node_modules",
    ".simp/*.ts",
    ".simp/**/*.ts"
  ]
}
